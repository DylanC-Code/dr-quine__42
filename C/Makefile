# ============================================================================== #
#                                 CONFIGURATION                                  #
# ============================================================================== #

# üìõ Nom du programme
COLLEEN_OUT := Colleen

# üìÇ R√©pertoires
SRCS_DIR := srcs/
BUILD_DIR := build/
INCLUDE_DIRS := -Iincludes

# üì¶ Compiler & Flags
CC := cc
CFLAGS := -Wall -Wextra -Werror -g3
CPPFLAGS := -Iincludes

# üõ† Utilitaires
MAKE := make
RM := rm -rf

# üìÅ Sources & Objets
COLLEEN_SRCS := $(addprefix $(SRCS_DIR), \
		Colleen.c \
)
COLLEEN_OBJS := $(patsubst %.c, $(BUILD_DIR)%.o, $(COLLEEN_SRCS))

DEPS := $(COLLEEN_OBJS:.o=.d)


# ============================================================================== #
#                               RULES - BUILD FLOW                               #
# ============================================================================== #

# üéØ R√®gle principale
all: colleen

# üß± Construction de l'ex√©cutable
colleen: $(BUILD_DIR) $(COLLEEN_OBJS)
	$(CC) $(CFLAGS) $(COLLEEN_OBJS) -o $(COLLEEN_OUT)

# üî® Compilation des .c vers .o
$(BUILD_DIR)%.o: %.c
	mkdir -p $(dir $@)
	$(CC) $(CFLAGS) -MMD -MP $(INCLUDE_DIRS) -c $< -o $@


# ============================================================================== #
#                            DIRECTORY & LIBRARY SETUP                           #
# ============================================================================== #

# üìÅ Cr√©ation du dossier de build
$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

# ============================================================================== #
#                                   CLEAN RULES                                  #
# ============================================================================== #

clean:
	$(RM) $(BUILD_DIR)

fclean: clean
	$(RM) $(COLLEEN_OUT)

re: fclean all

# ============================================================================== #
#                                  PHONY & DEPS                                  #
# ============================================================================== #

# üìå Cibles qui ne sont pas des fichiers
.PHONY: all clean fclean re

# üìé Inclusion des d√©pendances g√©n√©r√©es automatiquement
-include $(DEPS) $(DEPS_BONUS)