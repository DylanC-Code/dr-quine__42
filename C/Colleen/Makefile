# ============================================================================== #
#                                 CONFIGURATION                                  #
# ============================================================================== #

# üìõ Nom du programme
NAME := Colleen

# üìÇ R√©pertoires
SRCS_DIR := srcs/
BUILD_DIR := build/
INCLUDE_DIRS := -Iincludes

# üì¶ Compiler & Flags
CC := cc
CFLAGS := -Wall -Wextra -Werror -g3
CPPFLAGS := -Iincludes

# üõ† Utilitaires
MAKE := make
RM := rm -rf

# üìÅ Sources & Objets
SRCS := $(addprefix $(SRCS_DIR), \
		main.c \
)
OBJS := $(patsubst %.c, $(BUILD_DIR)%.o, $(SRCS))

DEPS := $(OBJS:.o=.d)


# ============================================================================== #
#                               RULES - BUILD FLOW                               #
# ============================================================================== #

# üéØ R√®gle principale
all: $(NAME)

# üß± Construction de l'ex√©cutable
$(NAME): $(BUILD_DIR) $(OBJS)
	$(CC) $(CFLAGS) $(CPPFLAGS) -o $(NAME) $(OBJS)

# üî® Compilation des .c vers .o
$(BUILD_DIR)%.o: %.c
	mkdir -p $(dir $@)
	$(CC) $(CFLAGS) -MMD -MP $(INCLUDE_DIRS) -c $< -o $@


# ============================================================================== #
#                            DIRECTORY & LIBRARY SETUP                           #
# ============================================================================== #

# üìÅ Cr√©ation du dossier de build
$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

# ============================================================================== #
#                                   CLEAN RULES                                  #
# ============================================================================== #

clean:
	$(RM) $(BUILD_DIR)

fclean: clean
	$(RM) $(NAME)

re: fclean all

# ============================================================================== #
#                                    TEST RULES                                  #
# ============================================================================== #

test_leak: $(NAME)
	valgrind --leak-check=full --show-leak-kinds=all --track-fds=yes --track-origins=yes --log-fd=1 --trace-children=yes ./$(NAME) test.cub

# ============================================================================== #
#                                  PHONY & DEPS                                  #
# ============================================================================== #

# üìå Cibles qui ne sont pas des fichiers
.PHONY: all clean fclean re

# üìé Inclusion des d√©pendances g√©n√©r√©es automatiquement
-include $(DEPS) $(DEPS_BONUS)